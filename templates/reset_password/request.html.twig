{% extends 'layout_rightcolumn.html.twig' %}

{% block title %}{{ 'user.reset_password.request.title' |trans }}{% endblock %}

{% block body_id 'user_resetpassword_request' %}

{% block main %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>{{ 'user.reset_password.request.title' |trans }}</h1>

    <p>{{ 'user.reset_password.request.info' |trans }}</p>
    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}

        <button class="btn btn-primary">{{ 'user.reset_password.request.action' |trans }}</button>
    {{ form_end(requestForm) }}
{% endblock %}

{% extends 'layout_rightcolumn.html.twig' %}

{% block body_id 'user_register' %}

{% block main %}
    <h1>{{ 'user.register.title'|trans }}</h1>

    <div class="alert alert-info" role="alert">{{ 'user.register.info'|trans }}</div>

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <button type="submit" class="btn btn-primary">
        <i class="fa fa-save" aria-hidden="true"></i> {{ 'user.register.action'|trans }}
    </button>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    <div class="section widget widget-user">
        <h2>{{ 'user.register.alreadyRegistered'|trans }}</h2>
        <a href="{{ path('security_login') }}" class="btn btn-lg btn-block btn-default">
            <i class="fa fa-user"></i> {{ 'user.login.action'|trans }}
        </a>
    </div>

    {{ parent() }}
{% endblock %}
